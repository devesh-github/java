public class clsThreadRunnable implements Runnable 
{ 
    String str; 
    public clsThreadRunnable(String strval)
    { 
        str = strval; 
    } 

    public void run(){ 
        //this method runs when start() is invoked on the thread 
        System.out.println( str ); 
    } 


    public static void main( String[] args )
    { 
        clsThreadRunnable threadedClass = new clsThreadRunnable(); 
        Thread t1 = threadedClass.getNewThread(); 
        t1.start(); 

        Thread t2 = threadedClass.getNewThread(); 
        t2.start(); 
    } 
}
